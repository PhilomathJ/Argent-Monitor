<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SpaceX Live Cams - Multi-View Dashboard</title>
    <link rel="stylesheet" href="./js/gridstack.min.css" />
    <style>
      * {
        box-sizing: border-box;
      }
      
      body,
      html {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow: auto;
        background-color: #0a0a0a;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
          Oxygen, Ubuntu, Cantarell, sans-serif;
      }

      .grid-stack {
        background-color: #0a0a0a;
        min-height: 100vh;
        padding: 10px;
      }

      .grid-stack-item-content {
        background-color: #1a1a1a;
        border-radius: 4px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
        transition: box-shadow 0.2s;
        left: 0 !important;
        right: 0 !important;
        top: 0 !important;
        bottom: 0 !important;
        position: absolute !important;
      }

      .grid-stack-item-content:hover {
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.7);
      }

      .video-container {
        width: 100%;
        height: 100%;
        position: relative;
        background: #1a1a1a;
      }

      .video-title {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        padding: 8px;
        background: rgba(0, 0, 0, 0.8);
        color: white;
        font-size: 14px;
        font-weight: 500;
        z-index: 10;
        text-align: center;
      }

      iframe {
        width: 100%;
        height: 100%;
        border: 0;
        display: block;
      }
    </style>
  </head>
  <body>
    <div class="grid-stack">
      <!-- Items will be added dynamically -->
      <div class="grid-stack-item" gs-x="0" gs-y="0" gs-w="1" gs-h="1">
        <div class="grid-stack-item-content">
          <div class="video-container">
            <div class="video-title">Rover 2 Cam</div>
            <iframe
              src="https://www.youtube.com/embed/tS2PHJmvJzo?autoplay=0&mute=1&enablejsapi=1"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          </div>
        </div>
      </div>

      <div class="grid-stack-item" gs-x="1" gs-y="0" gs-w="1" gs-h="1">
        <div class="grid-stack-item-content">
          <div class="video-container">
            <div class="video-title">NSF Live</div>
            <iframe
              src="https://www.youtube.com/embed/mhJRzQsLZGg?autoplay=0&mute=1&enablejsapi=1"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          </div>
        </div>
      </div>

      <div class="grid-stack-item" gs-x="2" gs-y="0" gs-w="1" gs-h="1">
        <div class="grid-stack-item-content">
          <div class="video-container">
            <div class="video-title">Rover Cam</div>
            <iframe
              src="https://www.youtube.com/embed/inCQ49QGmqQ?autoplay=0&mute=1&enablejsapi=1"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          </div>
        </div>
      </div>

      <div class="grid-stack-item" gs-x="0" gs-y="1" gs-w="1" gs-h="1">
        <div class="grid-stack-item-content">
          <div class="video-container">
            <div class="video-title">Lab Cam</div>
            <iframe
              src="https://www.youtube.com/embed/1_XLpEKtW8Y?autoplay=0&mute=1&enablejsapi=1"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          </div>
        </div>
      </div>

      <div class="grid-stack-item" gs-x="1" gs-y="1" gs-w="1" gs-h="1">
        <div class="grid-stack-item-content">
          <div class="video-container">
            <div class="video-title">Multiplex Cam</div>
            <iframe
              src="https://www.youtube.com/embed/bK-ToXIW7Uw?autoplay=0&mute=1&enablejsapi=1"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          </div>
        </div>
      </div>

      <div class="grid-stack-item" gs-x="2" gs-y="1" gs-w="1" gs-h="1">
        <div class="grid-stack-item-content">
          <div class="video-container">
            <div class="video-title">Sentinel Cam</div>
            <iframe
              src="https://www.youtube.com/embed/IQV0DlS1Ew0?autoplay=0&mute=1&enablejsapi=1"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          </div>
        </div>
      </div>

      <div class="grid-stack-item" gs-x="0" gs-y="2" gs-w="1" gs-h="1">
        <div class="grid-stack-item-content">
          <div class="video-container">
            <div class="video-title">Nerdle Cam</div>
            <iframe
              src="https://www.youtube.com/embed/oOj_x6H74mA?autoplay=0&mute=1&enablejsapi=1"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          </div>
        </div>
      </div>
    </div>

    <script src="./js/gridstack-all.js"></script>
    <script>
      // Initialize GridStack after DOM is loaded
      document.addEventListener('DOMContentLoaded', function () {
        const grid = GridStack.init({
          column: 3,
          cellHeight: 250,
          margin: 5,
          float: false,
          disableOneColumnMode: true,
          alwaysShowResizeHandle: true,
          resizable: {
            handles: 'e, se, s, sw, w',
          },
        });

        console.log(
          'GridStack initialized with',
          grid.getGridItems().length,
          'items',
        );
      });
    </script>
  </body>
</html>
